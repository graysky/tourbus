<html>
<head>
  <title>Tourbus</title>
  <%= stylesheet_link_tag "main" %>
  <%= stylesheet_link_tag "calendar-system.css" %>
  <%= javascript_include_tag "prototype" %>
  <%= javascript_include_tag "effects" %>
  <%= javascript_include_tag "calendar.js" %>
  <%= javascript_include_tag "calendar-en.js" %>
  <%= javascript_include_tag "calendar-setup.js" %>
</head>

<body onload="<%= @content_for_onload %>">

<div id="container">
<div id="main_logo">

<!-- Need a logo image -->
TourBus

<div id="header">
	<%
		if session[:band].nil? or !session[:band].confirmed?
	%>
		<%= link_to("Login", :controller => "band", :action => "login") %> |
	    <%= link_to("Sign Up", :controller => "signup", :action => "step1") %>
	<%
		else
	%>
		<%= session[:band].name %>:
		<%= public_band_link "Home" %> |
		<%= link_to("Settings", :controller => "band", :action => "settings") %> |
	    <%= link_to("Log Out", :controller => "band", :action => "logout") %>
	<%
		end
	%>
</div>

</div>

<div style="padding-top:4px;padding-bottom:4px;color:#99CC00;font-family: Arial, Helvetica;border:1px solid #ccc;padding-left:20px;font-size:24px;background-color:#F4F9E5";width=100%;">
<span class="testme">Shows</span>
<span class="testme" style="font-weight:bold">Bands</span>
<span class="testme">Venues</span>
<span class="testme">Users</span>
</div>

<div id="content">
<p style="color: green"><%= flash[:notice] %></p>
<%= @content_for_layout %>
</div>
</div>

</body>
</html>