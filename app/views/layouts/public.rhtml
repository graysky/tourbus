<html>
<head>
  <title>tourb.us |
  <%= 
    if @page_title 
    @page_title
     else
      "Find Local, Live Music" 
     end
   %>
  </title>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <link rel="shortcut icon" href="/images/favicon.ico">
  <%= stylesheet_link_tag "main" %>
  <%= stylesheet_link_tag "calendar-system.css" %>
  <%= javascript_include_tag "prototype" %>
  <%= javascript_include_tag "effects" %>
  <%= javascript_include_tag "controls" %>
  <%= javascript_include_tag "Tooltip" %>
  <%= javascript_include_tag "rounder" %>
  <%= javascript_include_tag "debug.js" %>
  <!--[if lt IE 7.]>
  <script defer type="text/javascript" src="/javascripts/pngfix.js"></script>
  <![endif]-->
  
  <%= @content_for_head %>
</head>

<body onload="<%= @content_for_onload %>">

<div id="container">
<div id="main_logo">
<a href="/"><img src="/images/logo2.gif" style="margin-top:4px;margin-bottom:4px"></a>

<div id="header">
  <%
      fan = logged_in_fan
      band = logged_in_band
        is_fan = !fan.nil? && fan.confirmed?
    is_band = !band.nil? && band.confirmed?

    if is_fan
  %>
    <%= fan.name %>:
    <%= public_fan_link "Profile", fan %> |
    <%= link_to("Settings", :controller => "fan", :action => "settings") %> |
    <%= link_to("Feedback", :controller => "feedback") %> |
      <%= link_to("Log Out", :controller => "fan", :action => "logout") %>
  
  <%
    elsif is_band
  %>
    <%= band.name %>:
    <%= public_band_link "Profile", band %> |
    <%= link_to("Settings", :controller => "band", :action => "settings") %> |
    <%= link_to("Feedback", :controller => "feedback") %> |
      <%= link_to("Log Out", :controller => "band", :action => "logout") %>
  
  <%
    elsif !is_fan and !is_band
  %>
    <%= link_to("Login", :controller => "login") %> |
    <%= link_to("Feedback", :controller => "feedback") %> |
      <%= link_to("Sign Up", :controller => "signup") %>
  <%
    end
  %>
</div>

</div>

<div id="navbar">
  <div id="nav-options">
    <table border="0" cellpadding="0" cellspacing="0" style="padding:0px; margin:0px; width:100%">
    <tr valign="top"><td>
  <span class="nav-option">
  <%= link_to(image_tag("nav_shows.png", :alt => "Find Shows", :size => "130x30", :border => 0), :controller => "find", :action => "show") %>
  </span>
  <span class="nav-option">
  <%= link_to(image_tag("nav_bands.png", :alt => "Find Bands", :size => "130x30", :border => 0), :controller => "find", :action => "band") %>
  </span>
  <span class="nav-option">
  <%= link_to(image_tag("nav_venues.png", :alt => "Find Venues", :size => "130x30", :border => 0), :controller => "find", :action => "venue") %>
  </span>
  </td></tr></table>  
  </div>
</div>

<% if @header_title %>
  <div id="content_header">
    <h1><%= @header_title %></h1>
  </div>
<% end %>

<div id="content">

<% if flash[:success] %>
<div class="success">
  <%= img_label_table "accept.png", flash[:success] %>
</div>
<% end %>

<% if flash[:error] %>
<div class="error">
  <%= img_label_table "exclamation.png", flash[:error] %>
</div>
<% end %>

<% if flash[:info] %>
<div class="info_box">
  <%= img_label_table "information.png", flash[:info] %>
</div>
<% end %>

<%= @content_for_layout %>
</div>

<div style="clear:both">
</div>

<div id="footer">
  <a href="/faq">FAQ</a> |
  <a href="/news">News</a> |
  <a href="http://blog.tourb.us">Blog</a> | 
  <a href="/about">About</a> |
  <%= link_to("Feedback", :controller => "feedback") %> 
  <% # | <a href="http://groups.google.com/group/tourbus">Discussion</a> %>
</div>

</div>
</body>
</html>