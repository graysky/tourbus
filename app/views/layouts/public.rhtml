<html>
<head>
  <title>Tourbus: 
  <%= 
  	if @page_title 
	  @page_title
   	else
   	  # Default title
      "Find Local, Live Music" 
   	end
   %>
  
  </title>
  
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />

  <%= stylesheet_link_tag "main" %>
  <%= stylesheet_link_tag "calendar-system.css" %>
  <%= javascript_include_tag "prototype" %>
  <%= javascript_include_tag "effects" %>
  <%= javascript_include_tag "controls" %>
  <%= javascript_include_tag "calendar.js" %>
  <%= javascript_include_tag "calendar-en.js" %>
  <%= javascript_include_tag "calendar-setup.js" %>
  
  <%= @content_for_head %>
</head>

<body onload="<%= @content_for_onload %>">

<div id="container">
<div id="main_logo">

<!-- temporary image -->
<a href="/"><img src="/images/logo.gif" style="margin-top:4px;margin-bottom:4px"></a>

<div id="header">
	<%
		is_fan = !session[:fan].nil? && session[:fan].confirmed?
		is_band = !session[:band].nil? && session[:band].confirmed?

		if is_fan
	%>
		<%= session[:fan].name %>:
		<%= public_fan_link "Profile", session[:fan] %> |
		<%= link_to("Settings", :controller => "fan", :action => "settings") %> |
		<%= link_to("Feedback", :controller => "feedback") %> |
	    <%= link_to("Log Out", :controller => "fan", :action => "logout") %>
	
	<%
		elsif is_band
	%>
		<%= session[:band].name %>:
		<%= public_band_link "Home", session[:band] %> |
		<%= link_to("Settings", :controller => "band", :action => "settings") %> |
		<%= link_to("Feedback", :controller => "feedback") %> |
	    <%= link_to("Log Out", :controller => "band", :action => "logout") %>
	
	<%
		elsif !is_fan and !is_band
	%>
		<%= link_to("Band Login", :controller => "band", :action => "login") %> |
		<%= link_to("Fan Login", :controller => "fan", :action => "login") %> |
		<%= link_to("Feedback", :controller => "feedback") %> |
	    <%= link_to("Sign Up", :controller => "signup") %>
	<%
		end
	%>
	
</div>

</div>

<div id="navbar" style="padding-top:4px;padding-bottom:4px;color:#99CC00;font-family: Arial, Helvetica;border:1px solid #ccc;padding-left:20px;font-size:24px;background-color:#F4F9E5";width=100%;">
<span class="testme"><%= link_to("Shows", :controller => "find", :action => "show") %></span>
<span class="testme" style="font-weight:bold"><%= link_to("Bands", :controller => "find", :action => "band") %></span>
<span class="testme">Venues</span>
<span class="testme">Users</span>
</div>


<%
	if @header_title
%>
	<div id="content_header">
		<h1><%= @header_title %></h1>
	</div>
<%
	end
%>


<div id="content">
<p style="color: green"><%= flash[:notice] %></p>
<%= @content_for_layout %>
</div>

<!-- ugly hack -->
<div style="clear:both">
</div>

</div>



</body>
</html>