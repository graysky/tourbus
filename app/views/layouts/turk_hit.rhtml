<html>
<head>
  <title>tourb.us - <%= @page_title or "Find Local, Live Music" %></title>
  <%= stylesheet_link_tag "main" %>
  <%= stylesheet_link_tag "calendar-system.css" %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "Tooltip" %>
  <%= javascript_include_tag "rounder" %>
  <%= javascript_include_tag "debug.js" %>
  <%= @content_for_head %>
</head>
<body onload="<%= @content_for_onload %>">

<div id="container">
<div id="header_container">
  <div id="main_logo">
    <a href="/" target="_new"><img src="/images/logo2.gif" id="logo_img"></a>
  </div>

  <div style="clear:both"></div> 
</div>

<div id="content">

<% if flash[:success] %>
<div class="success">
  <%= img_label_table "accept.png", flash[:success] %>
</div>
<% end %>

<% if flash[:error] %>
<div class="error">
  <%= img_label_table "exclamation.png", flash[:error] %>
</div>
<% end %>

<% if flash[:info] %>
<div class="info_box">
  <%= img_label_table "information.png", flash[:info] %>
</div>
<% end %>

<%= @content_for_layout %>
</div>

<div style="clear:both"></div>

</div>

</body>
</html>